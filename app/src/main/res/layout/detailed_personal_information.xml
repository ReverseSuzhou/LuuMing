<?xml version="1.0" encoding="utf-8"?><!--发帖页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detailed_personal_information_LinearLayout"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/detailed_personal_information_linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailed_personal_information_1_button_userpicture"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button"
            android:scaleType="fitCenter"
            android:src="@drawable/default_userpicture" />

        <!--昵称文本显示框-->
        <TextView
            android:id="@+id/detailed_personal_information_1_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="15dp"/>
    </LinearLayout>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_1_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_2_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <LinearLayout
        android:id="@+id/detailed_personal_information_linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailed_personal_information_2_textview_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!--空白框-->
        <View
            android:id="@+id/detailed_personal_information_3_view_blank"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#aa000000" />

        <TextView
            android:id="@+id/detailed_personal_information_2_textview_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_4_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_5_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_6_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_focus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_7_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_fan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--空白框-->
    <View
        android:id="@+id/detailed_personal_information_8_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <TextView
        android:id="@+id/detailed_personal_information_textview_forumt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>