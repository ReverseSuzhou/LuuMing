<?xml version="1.0" encoding="utf-8"?><!--修改个人信息页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modify_personal_information_page_linearlayout"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/modify_personal_information_page_relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_1_textview_modify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_text"
            android:gravity="center"
            android:text="个人信息完善"
            android:textSize="25sp" />
        <!--返回按钮-->
        <ImageButton
            android:id="@+id/modify_personal_information_page_1_button_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/modify_personal_information_page_1_textview_modify"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/back" />
        <!--刷新按钮-->
        <ImageButton
            android:id="@+id/modify_personal_information_page_1_1_button_refresh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/modify_personal_information_page_1_textview_modify"
            android:background="@drawable/background_button"
            app:srcCompat="@drawable/refresh" />
    </RelativeLayout>

    <!--空白框-->
    <View
        android:id="@+id/collect_page_view_blank"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aa000000" />

    <LinearLayout
        android:id="@+id/modify_personal_information_page_linearlayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <!--用户名文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_1_textview_username"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:text="用户名:"
            android:singleLine="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <!--输入昵称框-->
        <EditText
            android:id="@+id/modify_personal_information_page_1_edittext_exchange_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_text"
            android:hint="昵称"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_personal_information_page_linearlayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <!--签名文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_2_textview_sign"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:text="签名:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />
        <!--签名文本编辑框-->
        <EditText
            android:id="@+id/modify_personal_information_page_2_edittext_sign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_text"
            android:hint="个性签名（小于50字符）"
            android:singleLine="true"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_personal_information_page_linearlayout_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <!--用户名文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_1_textview_email"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:text="邮箱:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <!--输入昵称框-->
        <EditText
            android:id="@+id/modify_personal_information_page_1_edittext_exchange_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_text"
            android:hint="邮箱"
            android:singleLine="true"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_personal_information_page_linearlayout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <!--性别文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_3_textview_sex"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:text="性别:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <!--性别文本编辑框-->
        <RadioGroup
            android:id="@+id/modify_personal_information_page_3_radiogroup_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/modify_personal_information_page_3_radiogroup_sex1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="男"/>

            <RadioButton
                android:id="@+id/modify_personal_information_page_3_radiogroup_sex2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="女"/>

            <RadioButton
                android:id="@+id/modify_personal_information_page_3_radiogroup_sex3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="null"/>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_personal_information_page_linearlayout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <!--出生日期文本显示框-->
        <TextView
            android:id="@+id/modify_personal_information_page_4_textview_date"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:text="年龄:"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <!--出生日期文本编辑框-->
        <EditText
            android:id="@+id/modify_personal_information_page_4_edittext_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/background_text"
            android:hint="年龄"
            android:singleLine="true"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <Button
        android:id="@+id/modify_personal_information_page_linearlayout_5_button_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_button"
        android:text="确定"
        android:textSize="30sp"/>

</LinearLayout>